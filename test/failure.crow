import
	crow/io/print: err, pipe, print, print-no-newline

failure record(path string, message string)

print-failures nat(failures failure[]) summon, native extern
	for failure : failures
		failure print-failure
	err print "{failures.size} failures"
	failures.size

-print-failure void(failure failure) summon, native extern
	err print-bold
	err print-no-newline failure.path
	err print-reset
	err print-no-newline " "
	err print failure.message

# TODO:MOVE
-print-bold void(pipe pipe) summon, native extern
	pipe print-no-newline "\x1b[1m"

-print-reset void(pipe pipe) summon, native extern
	pipe print-no-newline "\x1b[m"
