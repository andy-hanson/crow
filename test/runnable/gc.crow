import
	crow/io/print: out, print
	crow/private/alloc:
		cur-word, gc-count, gc-stats, get-gc, get-stats, force-needs-gc, set-hard-limit, words-free, words-used

main nat^(_ string[]) summon
	trusted
		gc = get-gc
		# To speed up 'gc.get-stats'
		gc.hard-limit := 0x10000

		# We'll keep a alive, but not b
		a r = 1, 2, 3
		b r = 4, 5, 6
		# TODO: `size-of@(nat) * 3` should parse
		assert b.as-any-const-pointer - a.as-any-const-pointer == (size-of@nat) * 3

		out print "stats: {gc get-stats}"
		out print "a: {a}"
		out print "stats (after print): {gc get-stats}"

		gc force-needs-gc
		<- delay

		out print "-- after gc --"
		out print "stats: {gc get-stats}"
		out print "a: {a}"
		out print "stats (after print): {gc get-stats}"
		()

r record
	a nat
	b nat
	c nat

to string(a r)
	"a={a a}, b={a b}, c={a c}"

to string(a gc-stats) summon
	"gc-count={a gc-count}, cur-word={a cur-word}, words-used={a words-used}, words-free={a words-free}"
