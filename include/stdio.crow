no-std
import
	crow/bool: bool
	crow/c-types: c-int, size_t, long
	crow/extra-types: fd-t
	crow/misc: void
	crow/private/bootstrap: char8, c-str
	crow/private/number-low-level: nat8
	crow/ptr: const-ptr, mut-ptr

perror void(s c-str) unsafe summon extern<c> noctx

stdin fd-t() noctx
	0
stdout fd-t() noctx
	1
stderr fd-t() noctx
	2

popen FILE(command c-str, modes c-str) unsafe summon extern<c> noctx
pclose c-int(stream FILE) unsafe summon extern<c> noctx

feof bool(stream FILE) unsafe summon extern<c> noctx
fgets char8 mut*(s char8 mut*, n c-int, stream FILE) unsafe summon extern<c> noctx


FILE extern-ptr

fopen FILE(filename c-str, mode c-str) unsafe summon extern<c> noctx
fclose c-int(stream FILE) unsafe summon extern<c> noctx
fseek c-int(stream FILE, offset long, whence SEEK) unsafe summon extern<c> noctx
ftell long(stream FILE) unsafe summon extern<c> noctx
ferror bool(stream FILE) unsafe summon extern<c> noctx
fread size_t
	_Buffer nat8 mut*
	_ElementSize size_t
	_ElementCount size_t
	_Stream FILE
spec
	unsafe
	summon
	extern<c>
	noctx
fwrite size_t
	_Buffer nat8*
	_ElementSize size_t
	_ElementCount size_t
	_Stream FILE
spec
	unsafe
	summon
	extern<c>
	noctx

SEEK enum extern
	SEEK_SET
	SEEK_CUR
	SEEK_END
