no-std
import
	crow/c-types: c-int
	crow/misc: void
	crow/number: int32
	crow/pointer: const-pointer, mut-pointer
	crow/string: c-string
	system/sys/socket: sockaddr
	system/sys/types: socklen_t

+addrinfo record extern, mut
	ai_flags int32
	ai_family int32
	ai_socktype int32
	ai_protocol int32
	ai_addrlen socklen_t
	ai_addr sockaddr mut*
	ai_canonname c-string
	ai_next addrinfo*

+ai-passive int32()
	1

###
Remember to call 'freeaddrinfo'!
And cast the result to an enum 'getaddrinfo_error_posix' or 'getaddrinfo_error_windows'
###
+getaddrinfo c-int(
	name c-string,
	service c-string,
	req addrinfo*,
	pai addrinfo mut* mut*,
) summon, c extern
+freeaddrinfo void(ai addrinfo mut*) c extern
+gai_strerror c-string(ecode int32) c extern

+hostent record extern, mut
	h_name c-string
	h_aliases c-string mut*
	h_addrtype c-int
	h_length c-int
	h_addr_list c-string mut*

+gethostbyname hostent mut*(name c-string) c extern

+protoent record extern, mut
	p_name c-string
	p_aliases c-string mut*
	p_proto c-int

+getprotobyname protoent mut*(name c-string) c extern

