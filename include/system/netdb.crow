	EAI_NONE = 0
	EAI_BADFLAGS = -1
	EAI_NONAME = -2
	EAI_AGAIN = -3
	EAI_FAIL = -4
	EAI_SOCKTYPE = -7
	EAI_SERVICE = -8
	EAI_MEMORY = -10
	EAI_SYSTEM = -11
	EAI_OVERFLOW = -12

	EAI_NODATA = -5
	EAI_ADDRFAMILY = -9
	EAI_INPROGRESS = -100
	EAI_CANCELED = -101
	EAI_NOTCANCELED = -102
	EAI_ALLDONE = -103
	EAI_INTR = -104
	EAI_IDN_ENCODE = -105

