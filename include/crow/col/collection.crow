+to-range nat64 range(a range-relative-to-end, size nat64) bare
	assert a.low <= size : a.low index-too-big size
	assert a.high.subtract <= size : a.high.subtract index-too-big size
	high = size - a.high.subtract
	assert a.low <= high
	a.low .. high

