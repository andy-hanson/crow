+for-break[col, elem] void(
	a col with-index,
	f void break-or-continue mut(index nat64, elem elem),
) (col, elem) iterate
	i mut nat64 = 0
	_ = a.inner iterate x =>
		match f[i, x]
		as loop-break _
			true
		as loop-continue
			i +:= 1
			false
+exists[col, elem] bool(a col with-index, f bool mut(index nat64, elem elem)) (col, elem) iterate
	i mut nat64 = 0
	a.inner iterate x =>
		res = f[i, x]
		i +:= 1
		res
