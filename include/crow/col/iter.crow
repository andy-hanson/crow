no-std
import
	../bool: bool
	../fun-util: subscript
	../option: option

!value-and-rest[t, iter] record by-val
	value t
	rest iter

iterator[iter, t] spec
	next (t, iter) value-and-rest?(iter iter)

iter-find[iter, t] iter(iter iter, f act bool(t)) (iter, t) iterator
	if n ?= iter next
		if f[n value]
			iter
		else
			n.rest iter-find f
	else
		iter
