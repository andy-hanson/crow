	../col/arr: arr
	../col/arr-util: map, tail
	../col/private/arr-low-level: subscript
	../fun-util: fun-ptr2, subscript
	../fut: delay, fut, handle-exceptions, then-void
	../misc: new, void
	../ptr:
		+, any-mut-ptr, as-any-mut-ptr, as-const, as-ref, by-val, const-ptr, mut-ptr, null, ptr-to,
		ref-of-val, set-deref, subscript
	../range: ..
	../str: c-str, str
	../str-util: to-str
