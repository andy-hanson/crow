no-std
import
	..number: *, /, nat

# Represents an amount of time.
duration record
	# TODO:PRIVATE (public getter, private constructor)
	nsec nat

seconds duration(a nat)
	duration: a * 1000000000

msec duration(a nat)
	duration: a * 1000000

usec duration(a nat)
	duration: a * 1000

nsec duration(a nat)
	duration: a

msec nat(a duration)
	# TODO:ROUND
	a.nsec / 1000000

usec nat(a duration)
	# TODO:ROUND
	a.nsec / 1000
