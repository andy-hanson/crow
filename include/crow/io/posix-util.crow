no-std
import
	errno: errno
	../extra-types: err-t
	../misc: void
	../number: ==
	../str: ~~, literal
	../str-conv: to-str
	../str-util: to-c-str

# Fail if `errno != 0`.
check-errno void() unsafe
	errno check-posix-error

# Fail if `e != 0`.
check-posix-error void(e err-t)
	assert e == 0 : "posix error {e}"
