no-std
import
	system/errno: errno
	../c-types: err-t
	../misc: new, void
	../number: ==
	../string: ~~, to

# Fail if `errno != 0`.
check-errno void() unsafe
	errno check-posix-error

# Fail if `e != 0`.
check-posix-error void(e err-t)
	unless e == 0
		e throw-posix-error

throw-posix-error void(e err-t)
	throw "posix error {e}"
