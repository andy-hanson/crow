no-std
import
	system/errno: errno
	../c-types: err-t
	../exception: error
	../misc: new, void
	../number: ==
	../string: interpolate, to

# Fail if `errno != 0`.
check-errno void() summon, unsafe, (libc, native) extern
	errno check-posix-error

# Fail if `e != 0`.
check-posix-error void(e err-t)
	assert e == 0 : "posix error {e}" error
