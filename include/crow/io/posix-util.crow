no-std
import
	errno: errno
	../compare: !=
	../extra-types: err-t
	../misc: new, void
	../number: ==
	../str: literal, str
	../str-conv: finish, interp, to-str, with-str, with-value

# Fail if `errno != 0`.
check-errno void() unsafe
	errno check-posix-error

# Fail if `e != 0`.
check-posix-error void(e err-t)
	if e != 0
		throw "posix error {e}"
