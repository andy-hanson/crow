import
	..bootstrap: int, void
	..compare: ==, !=
	..exceptions: assert
	..posix.errno: errno
	..posix.extra-types: err-t

check-posix-error void(e err-t)
	# TODO: throw an exception
	assert: e == 0

check-errno-if-neg-one void(e int) summon trusted
	if e == -1
		errno check-posix-error

check-errno-if-not-zero void(e int) summon trusted
	if e != 0
		errno check-posix-error
