import
	..cell: cell
	..number: int32, nat16
	..str: char, c-str
	.bytes-types: bytes256
	.types: ino-t, off-t

dir extern-ptr

dirent record mut
	d-ino mut ino-t
	d-off mut off-t
	d-reclen mut nat16
	d-type mut char
