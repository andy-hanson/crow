# /usr/include/dirent.h
no-std
import
	..cell: cell
	..number: int32, nat16
	..str: char, c-str
	.bytes-types: bytes256
	.types: ino_t, off_t

dir extern-ptr

dirent record mut
	d_ino mut ino_t
	d_off mut off_t
	d_reclen mut nat16
	d_type mut char
	# TODO: d_name char[256]
	d_name mut bytes256

opendir dir(name c-str) summon extern<"opendir"> noctx
readdir_r int32(dirp dir, entry dirent, result cell dirent) summon extern<"readdir_r"> noctx
