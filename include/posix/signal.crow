no-std
import
	..fun: fun-ptr1
	..number: int, int32
	..misc: void
	..ptr: any-ptr
	.c-types: u-long
	.sigset: __sigset_t

sigaction record mut
	sa_handler __sighandler_t
	sa_flags u-long
	sa_restorer __sigrestore_t
	sa_mask __sigset_t

# Not in include headers, something I added
signal-t alias
	int32

sigpipe signal-t() noctx
	13

__sighandler_t alias
	fun-ptr1<void, int>
__sigrestore_t alias
	fun-ptr0<void>

sigignore int(sig signal-t) extern<"sigignore"> noctx summon
