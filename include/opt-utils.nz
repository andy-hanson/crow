import
	.bootstrap: call fun-mut0 fun-mut1 none opt
	.exceptions: fail

opt-or ?t(a opt ?t, default fun-mut0 ?t)
	match a
		none n
			default call
		some s
			s value

force ?t(a opt ?t)
	match a
		none n
			fail: "tried to force empty option"
		some s
			s value

then opt ?out(a opt ?in, f fun-mut1 opt<?out> ?in)
	match a
		none n
			none
		some s
			f call s.value
