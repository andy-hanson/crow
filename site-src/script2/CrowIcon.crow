import
	crow/js: as-js, as-t, call-property, get, js-global, set
	./util/js-util: make-class, method, to-js-object
	./util/util: create-div, node

# Icons from https://heroicons.com/

define-icon-custom-element void() summon, trusted, js extern
	ctor method = (this, _) =>
		this call-property "attachShadow", (("mode", "open"::string.as-js),).to-js-object
	connectedCallback method = (this, _) =>
		child = match (this call-property "getAttribute", "icon"::string).as-t::string
		as "copy"
			copy-icon
		as "download"
			download-icon
		as "external-link"
			external-link-icon
		as "play"
			play-icon
		else
			throw todo
		this get "shadowRoot" call-property "appendChild", child
	cls = "HTMLElement".js-global make-class ctor, (("connectedCallback", connectedCallback),)
	_ = "customElements".js-global call-property "define", "crow-icon"::string, cls

