import
	crow/io/print: out, print
	crow/str-util: starts-with

main fut nat(_ str[]) summon
	out print "crow".describe
	out print "ox".describe
	out print "dr. mario".describe
	out print "soap".describe
	()

describe str(a str)
	"{a}: {a.category ?? "don't know what that is"}"

category str?(a str)
	a.class || a.profession

class str?(a str)
	if a == "crow"
		"bird",
	elif a == "ox"
		"mammal",

profession str?(a str)
	if a starts-with "dr. "
		"doctor",
