import
	crow/io/print: out, print

main nat^(_ string[]) summon
	out print "crow".describe
	out print "ermisepillo".describe
	()

describe string(a string)
	"{a a-an} says {"-" join a.vowels}"

vowels string[](a string)
	() join for c : a char8s
		if c is-vowel
			c.to-string,

a-an string(a string)
	starts-with-vowel = (a.char8s.first ?? "a") is-vowel
	starts-with-vowel ? "an {a}" : "a {a}"

is-vowel bool(a char8)
	a in vowels

vowels char8[]()
	"a", "e", "i", "o", "u"
