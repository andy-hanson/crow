import
	crow/io/print: out, print

main fut nat(_ array str) summon
	out print ("albatross" greet "morning")
	out print ("fox" greet "afternoon")
	out print ("ox" greet "evening")
	out print ("crow" greet "night")
	()

greet str(name str, time str)
	"{good} {time}, {name plural}"

good str()
	"Good"

plural str(name str)
	suffix = if name ends-with "s" || name == "fox"
		"es"
	elif name ends-with "x"
		"en"
	else
		"s"
	"{name}{suffix}"
