import
	crow/io/print: out, print

main nat^(_ string[]) summon
	out print "crow".describe
	out print "ox".describe
	out print "dr. mario".describe
	out print "soap".describe
	()

describe string(a string)
	"{a}: {a.category ?? "don't know what that is"}"

category string?(a string)
	a.class || a.profession

class string?(a string)
	if a == "crow"
		"bird",
	elif a == "ox"
		"mammal",

profession string?(a string)
	if a starts-with "dr. "
		"doctor",
