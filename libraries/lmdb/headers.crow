MDB_txn extern
mdb_txn_begin err-t(
	env MDB_env mut*,
	parent MDB_txn mut*,
	mdb-flags u-int,
	txn MDB_txn mut* mut*,
) summon, lmdb extern
mdb_txn_abort void(txn MDB_txn mut*) summon, lmdb extern
mdb_txn_commit err-t(txn MDB_txn mut*) summon, lmdb extern
mdb_dbi_open err-t(txn MDB_txn mut*, name c-string, mdb-flags u-int, dbi MDB_dbi mut*) summon, lmdb extern
mdb_dbi_close void(env MDB_env mut*, dbi MDB_dbi) summon, lmdb extern

mdb_get err-t(txn MDB_txn mut*, dbi MDB_dbi, key MDB_val*, value MDB_val mut*) summon, lmdb extern
mdb_put err-t(
	txn MDB_txn mut*,
	dbi MDB_dbi,
	key MDB_val*,
	value MDB_val*,
	mdb-flags u-int,
) summon, lmdb extern

mdb_stat record extern
	ms_psize u-int
	ms_depth u-int
	ms_branch_pages size_t
	ms_leaf_pages size_t
	ms_overflow_pages size_t
	ms_entries size_t
mdb_stat err-t(txn MDB_txn mut*, dbi MDB_dbi, stat mdb_stat mut*) summon, lmdb extern

MDB_cursor extern
mdb_cursor_open err-t(txn MDB_txn mut*, dbi MDB_dbi, cursor MDB_cursor mut* mut*) summon, lmdb extern
