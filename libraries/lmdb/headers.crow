mdb_env_create err-t(env MDB_env mut* mut*) summon, lmdb extern
mdb_env_open err-t(
	env MDB_env mut*,
	path c-string,
	flats c-int,
	mode mode_t,
) summon, lmdb extern
mdb_env_close void(env MDB_env mut*) summon, lmdb extern
mdb_env_set_mapsize err-t(env MDB_env mut*, size size_t) summon, lmdb extern
