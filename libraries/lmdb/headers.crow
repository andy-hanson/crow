mdb_cursor_get err-t(
	cursor MDB_cursor mut*,
	key MDB_val mut*,
	value MDB_val mut*,
	op MDB_cursor_op,
) summon, lmdb extern
mdb_cursor_put err-t(
	cursor MDB_cursor mut*,
	key MDB_val*,
	value MDB_val*,
	mdb-flags u-int,
