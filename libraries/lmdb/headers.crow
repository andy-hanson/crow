	dbi MDB_dbi mut*,
) summon, lmdb extern
mdb_dbi_close void(env MDB_env mut*, dbi MDB_dbi) summon, lmdb extern

mdb_get mdb-error(
	txn MDB_txn mut*,
	dbi MDB_dbi,
	key MDB_val*,
	value MDB_val mut*,
) summon, lmdb extern
mdb_put mdb-error(
	txn MDB_txn mut*,
	dbi MDB_dbi,
	key MDB_val*,
	value MDB_val*,
	mdb-flags mdb-write-flags,
) summon, lmdb extern

mdb_stat record extern
	ms_psize u-int
	ms_depth u-int
