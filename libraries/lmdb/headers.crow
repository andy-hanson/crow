mdb_env_open mdb-error(
	env MDB_env mut*,
	path c-string,
	flats c-int,
	mode mode_t,
) summon, lmdb extern
mdb_env_close void(env MDB_env mut*) summon, lmdb extern
mdb_env_set_mapsize mdb-error(env MDB_env mut*, size size_t) summon, lmdb extern
mdb_env_set_maxdbs mdb-error(env MDB_env mut*, dbs u-int) summon, lmdb extern

