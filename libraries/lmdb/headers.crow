	ms_leaf_pages size_t
	ms_overflow_pages size_t
	ms_entries size_t
new mdb_stat()
	0, 0, 0, 0, 0, 0
mdb_stat mdb-error(txn MDB_txn mut*, dbi MDB_dbi, stat mdb_stat mut*) summon, lmdb extern

MDB_cursor extern
mdb_cursor_open mdb-error(
